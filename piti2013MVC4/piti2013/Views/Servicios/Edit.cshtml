@model piti2013.Models.Servicios

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Servicios</legend>

        @Html.HiddenFor(model => model.serviciosID)

        <div class="editor-label">
            @Html.LabelFor(model => model.tiposervicioID, "TipoServicio")
        </div>
        <div class="editor-field">
            @Html.DropDownList("tiposervicioID", String.Empty)
            @Html.ValidationMessageFor(model => model.tiposervicioID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.pymesID, "Pymes")
        </div>
        <div class="editor-field">
            @Html.DropDownList("pymesID", String.Empty)
            @Html.ValidationMessageFor(model => model.pymesID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.estatusID, "Estatus")
        </div>
        <div class="editor-field">
            @Html.DropDownList("estatusID", String.Empty)
            @Html.ValidationMessageFor(model => model.estatusID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechaagregado)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechaagregado)
            @Html.ValidationMessageFor(model => model.fechaagregado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fechamodificado)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fechamodificado)
            @Html.ValidationMessageFor(model => model.fechamodificado)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
